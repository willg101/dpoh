<div class="layout-selector-widget">
	<div class="layout-preview-container" data-index="{{index}}" data-layout-id="{{splitId}}">
		{{{layoutPreview}}}
	</div>
	{{#if includeControls}}
		<div class="layout-controls">
			{{layoutTitle}}
			<button class="btn black sm no-margin-top next-layout">
				<i class="fa fa-arrow-right"></i>
			</button>
			<button class="btn black sm no-margin-top prev-layout">
				<i class="fa fa-arrow-left"></i>
			</button>
		</div>
	{{/if}}
</div>
